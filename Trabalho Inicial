#include <iostream>

using namespace std;

int main()
{
    int opcao, n1, n2;

    while (opcao = !0) {
        //menu
        cout << "\n--CALCULADORA--" << endl;
        cout << endl;
        cout << "\nQual tipo de calculo deseja realizar?" << endl;
        cout << "\n[1] Soma";
        cout << "\n[2] Subtracao";
        cout << "\n[3] Multiplicacao";
        cout << "\n[4] Divisao";
        cout << "\n[0] Sair" << endl;
        cin >> opcao;
        system("cls");
        //executar opção do usuario
        switch (opcao) {
        case 1:
            cout << "Digite o primeiro numero: ";
            cin >> n1;
            cout << "Digite o segundo numero: ";
            cin >> n2;
            cout << "" << n1 + n2;
            cout << endl;
            system("pause");
            system("cls");
            break;
        case 2:
            cout << "Digite o primeiro numero: ";
            cin >> n1;
            cout << "Digite o segundo numero: ";
            cin >> n2;
            cout << "" << n1 - n2;
            cout << endl;
            system("pause");
            system("cls");
            break;
        case 3:
            cout << "Digite o primeiro numero: ";
            cin >> n1;
            cout << "Digite o segundo numero: ";
            cin >> n2;
            cout << "" << n1 * n2;
            cout << endl;
            system("pause");
            system("cls");
            break;
        case 4:
            cout << "Digite o primeiro numero: ";
            cin >> n1;
            cout << "Digite o segundo numero: ";
            cin >> n2;
            cout << "" << (float)n1 / n2;
            cout << endl;
            system("pause");
            system("cls");
            break;
        case 0:
            cout << "Saindo do programa" << endl;
            return 0;
            break;
        default:
            cout << "Opcao invalida" << endl;
        }
        cout << endl;

    }

}
